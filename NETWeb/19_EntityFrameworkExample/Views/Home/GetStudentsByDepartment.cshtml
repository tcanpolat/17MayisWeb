@model IEnumerable<Student>
@{
    ViewData["Title"] = "Home Page";
    var students = ViewData["Students"] as IEnumerable<Student>;
}

<h1>Bölüme Göre Öğrenciler</h1>
<form method="POST" action="@Url.Action("GetStudentsByDepartment","Home")">
    <div class="form-group">
        <label class="form-label" for="department">Bölüm:</label>
        <input type="text" id="department" name="department" class="form-control"/>
    </div>
    <button type="submit" class="btn btn-primary">Öğrencileri Getir</button>
</form>
@if(students != null && students.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                   İsim
                </th>
                <th>
                    Yaş
                </th>
                <th>
                   Bölüm
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in students)
            {
                <tr>
                    <td>
                        @student.Name
                    </td>
                    <td>
                        @student.Age
                    </td>
                    <td>
                        @student.Department
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else{
    <p>Belirtilen Öğrenciler Bulunamadı</p>
}
   